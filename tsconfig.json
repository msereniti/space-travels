{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2015",
    "moduleResolution": "node",
    "lib": ["es2019", "DOM"],
    "typeRoots": ["./typings", "./node_modules/@types"],
    "jsx": "preserve",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "allowJs": false,
    "strict": true,
    "sourceMap": true,
    "outDir": "dev/dist",
    "baseUrl": "./",
    "paths": {}
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
